<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp" >

    <com.startwork.streetguide.AutoSearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atvLocationX"
        android:hint="@string/lblHintSearchPlace"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/auto_text_view"
        android:textColor="@android:color/white"
        />

    <ImageButton
        android:id="@+id/btnRemoveLocation"
        android:src="@drawable/ic_minus"
        android:contentDescription="@string/lblDescRemoveLocation"
        android:background="@drawable/roundedbutton"

        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:layout_alignParentRight="true"
        style="?android:attr/buttonStyleSmall" />

</RelativeLayout>
